public class FilesInOut {

    public static void main(String[] args) {
    // Set the file names (input and output)
    String inputFileName = "input.txt";
    String outputFileName = "output.txt";
    
    // Set up a new Scanner to read the input file.
    try (Scanner scanner = new Scanner(new File(inputFileName))) {
        // Process the input file line by line
        while (scanner.hasNextLine()) {
            String line = scanner.nextLine();
            // Initially, echo the text to System.out to check you are reading correctly.
            System.out.println(line);
            
            // Add code to modify the text to the output format.
            String modifiedLine = modifyLine(line);
            
            // Set up a new PrintWriter to write the output file.
            try (PrintWriter writer = new PrintWriter(new FileWriter(outputFileName, true))) {
                // Write the modified line to the output file
                writer.println(modifiedLine);
            } catch (IOException e) {
                System.err.println("Error writing to output file: " + e.getMessage());
            }
        }
    } catch (FileNotFoundException e) {
        System.err.println("Error opening input file: " + e.getMessage());
    }
    
    // Finally, add code to read the filenames as arguments from the command line.
    if (args.length == 2) {
        inputFileName = args[0];
        outputFileName = args[1];
    }
    } // main


    public static void Title(String[] args) throws FileNotFoundException {
        // Get the file names from the command line arguments.
        String inputFile = args[0];
        String outputFile = args[1];

        // Set up a new Scanner to read the input file.
        Scanner scanner = new Scanner(new File(inputFile));

        // Set up a new PrintWriter to write the output file.
        PrintWriter writer = new PrintWriter(outputFile);

        // Define the list of articles, prepositions, and conjunctions that should be in lowercase.
        List<String> lowercaseWords = Arrays.asList("a", "an", "the", "and", "but", "or", "for", "nor", "on", "at", "to", "from", "by");

        // Iterate over each line in the input file.
        while (scanner.hasNextLine()) {
            String line = scanner.nextLine();

            // Split the line into individual words.
            String[] words = line.split("\\s+");

            // Modify each word according to the Title case rules.
            StringBuilder sb = new StringBuilder();
            for (int i = 0; i < words.length; i++) {
                String word = words[i];
                if (i == 0) {
                    // Always capitalize the first word.
                    sb.append(word.substring(0, 1).toUpperCase());
                    sb.append(word.substring(1).toLowerCase());
                } else if (lowercaseWords.contains(word.toLowerCase())) {
                    // Convert articles, prepositions, and conjunctions to lowercase.
                    sb.append(word.toLowerCase());
                } else {
                    // Capitalize other words.
                    sb.append(word.substring(0, 1).toUpperCase());
                    sb.append(word.substring(1).toLowerCase());
                }

                // Add a space between words.
                sb.append(" ");
            }

            // Write the modified line to the output file.
            writer.println(sb.toString().trim());
        }

        // Close the input and output files.
        scanner.close();
        writer.close();
        }
     
