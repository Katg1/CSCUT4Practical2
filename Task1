import java.io.*;
import java.awt.*;
import java.awt.event.*;
import java.util.*;
import javax.swing.*;
import java.lang.Number;

/**
 * 
 * CSCU9T4 Java strings and files exercise.
 *
 */
public class FilesInOut {

    public static void main(String[] args) {
      // Set the file names (input and output)
      String inputFileName = "input.txt";
        String outputFileName = "output.txt";
        
        if (args.length == 2) {
            inputFileName = args[0];
            outputFileName = args[1];
        }
        
        // Set up a new PrintWriter to write the output file.
        try (Scanner scanner = new Scanner(new File(inputFileName));
             PrintWriter writer = new PrintWriter(new FileWriter(outputFileName, true))) {
            while (scanner.hasNextLine()) {
                String line = scanner.nextLine();
                System.out.println(line);
                String modifiedLine = modifyLine(line);
                writer.println(modifiedLine);
            }
        } catch (FileNotFoundException e) {
            System.err.println("Error opening input file: " + e.getMessage());
        } catch (IOException e) {
            System.err.println("Error writing to output file: " + e.getMessage());
        }
    }

    private static String modifyLine(String line) {
        // Add code here to modify the input line
        return line.toUpperCase();
    }

    public static void Title(String[] args) {
        if (args.length < 2) {
            System.err.println("Usage: java FilesInOut inputFileName outputFileName");
            return;
        }
        
        String inputFile = args[0];
        String outputFile = args[1];

        List<String> lowercaseWords = Arrays.asList("a", "an", "the", "and", "but", "or", "for", "nor", "on", "at", "to", "from", "by");

        try (Scanner scanner = new Scanner(new File(inputFile));
             PrintWriter writer = new PrintWriter(outputFile)) {
            while (scanner.hasNextLine()) {
                String line = scanner.nextLine();
                String[] words = line.split("\\s+");
                StringBuilder sb = new StringBuilder();
                for (int i = 0; i < words.length; i++) {
                    String word = words[i];
                    if (i == 0) {
                        sb.append(word.substring(0, 1).toUpperCase());
                        sb.append(word.substring(1).toLowerCase());
                    } else if (lowercaseWords.contains(word.toLowerCase())) {
                        sb.append(word.toLowerCase());
                    } else {
                        sb.append(word.substring(0, 1).toUpperCase());
                        sb.append(word.substring(1).toLowerCase());
                    }
                    sb.append(" ");
                }
                writer.println(sb.toString().trim());
            }
        } catch (FileNotFoundException e) {
            System.err.println("Error opening input file: " + e.getMessage());
        } catch (IOException e) {
            System.err.println("Error writing to output file: " + e.getMessage());
        }
    }
     
    public static void Uppercase(String[] args) {
        if (args.length < 1) {
            System.err.println("Usage: java FilesInOut inputFileName");
            return;
        }
        
        String inputFile = args[0];
        String outputFile = "output.txt";

        try (Scanner scanner = new Scanner(new File(inputFile));
             PrintWriter writer = new PrintWriter(outputFile)) {
            while (scanner.hasNextLine()) {
                String line = scanner.nextLine();
                writer.println(line.toUpperCase());
            }
        } catch (FileNotFoundException e) {
            System.err.println("Error opening input file: " + e.getMessage());
        } catch (IOException e) {
            System.err.println("Error writing to output file: " + e.getMessage());
        }
    }
}
